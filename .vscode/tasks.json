{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CHAP2.Chorus.Api/CHAP2.Chorus.Api.csproj"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build CHAP2.Chorus.Api",
      "type": "process",
      "command": "dotnet",
      "args": ["build"],
      "options": { "cwd": "${workspaceFolder}/CHAP2.Chorus.Api" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build CHAP2SearchConsole",
      "type": "process",
      "command": "dotnet",
      "args": ["build"],
      "options": { "cwd": "${workspaceFolder}/Console/CHAP2.SearchConsole" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build CHAP2BulkConsole",
      "type": "process",
      "command": "dotnet",
      "args": ["build"],
      "options": { "cwd": "${workspaceFolder}/Console/CHAP2.Console.Bulk" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run CHAP2.Chorus.Api",
      "type": "shell",
      "command": "dotnet run",
      "options": { "cwd": "${workspaceFolder}/CHAP2.Chorus.Api" }
    },
    {
      "label": "run CHAP2SearchConsole",
      "type": "shell",
      "command": "dotnet run",
      "options": { "cwd": "${workspaceFolder}/Console/CHAP2.SearchConsole" }
    },
    {
      "label": "run CHAP2BulkConsole",
      "type": "shell",
      "command": "dotnet run",
      "options": { "cwd": "${workspaceFolder}/Console/CHAP2.Console.Bulk" }
    }
  ]
} 