{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build CHAP2API",
      "type": "shell",
      "command": "dotnet build",
      "options": { "cwd": "${workspaceFolder}/CHAP2API" }
    },
    {
      "label": "run CHAP2API",
      "type": "shell",
      "command": "dotnet run",
      "options": { "cwd": "${workspaceFolder}/CHAP2API" }
    },
    {
      "label": "start frontend",
      "type": "shell",
      "command": "npm start",
      "options": { "cwd": "${workspaceFolder}/frontend" }
    }
  ]
} 