    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug API and Console",
            "configurations": ["CHAP2API", "CHAP2Console"]
        }
    ],
    "configurations": [
        {
            "name": "CHAP2API",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CHAP2API/bin/Debug/net9.0/CHAP2API.dll",
            "cwd": "${workspaceFolder}/CHAP2API",
            "stopAtEntry": false,
            "preLaunchTask": "build CHAP2API"
        },
        {
            "name": "CHAP2Console",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CHAP2Console/bin/Debug/net9.0/CHAP2Console.dll",
            "cwd": "${workspaceFolder}/CHAP2Console",
            "stopAtEntry": false,
            "preLaunchTask": "build CHAP2Console"
        }
    ]
}