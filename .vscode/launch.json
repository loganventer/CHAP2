    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CHAP2API",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CHAP2API/bin/Debug/net9.0/CHAP2API.dll",
            "cwd": "${workspaceFolder}/CHAP2API",
            "preLaunchTask": "build CHAP2API"
        },
        {
            "name": "Launch Frontend (npm start)",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"]
        }
    ]
}