{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ChorusResource": {
    "FolderPath": "data/chorus"
  },
  "ApiSettings": {
    "GlobalRoutePrefix": "api",
    "DefaultPort": 5000,
    "MaxRequestSize": "10MB"
  },
  "SearchSettings": {
    "DefaultSearchMode": "Contains",
    "DefaultSearchScope": "all",
    "MaxSearchResults": 100,
    "CaseInsensitiveSearch": true
  },
  "SlideConversionSettings": {
    "AllowedExtensions": [".ppsx", ".pptx"],
    "MaxFileSizeBytes": 10485760,
    "DefaultChorusType": "NotSet",
    "DefaultTimeSignature": "NotSet"
  }
}
