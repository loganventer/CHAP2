{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ChorusResource": {
    "FolderPath": "data/chorus"
  },
  "ApiSettings": {
    "GlobalRoutePrefix": "api",
    "DefaultPort": 5000,
    "MaxRequestSize": "10MB"
  },
  "SearchSettings": {
    "DefaultSearchMode": "Contains",
    "DefaultSearchScope": "all",
    "MaxSearchResults": 100,
    "CaseInsensitiveSearch": true
  },
  "SlideConversionSettings": {
    "AllowedExtensions": [".ppsx", ".pptx"],
    "MaxFileSizeBytes": 10485760,
    "DefaultChorusType": "NotSet",
    "DefaultTimeSignature": "NotSet"
  },
  "TextStandardizationSettings": {
    "ReligiousTitles": [
      "God", "Heer", "Jesus", "Christ", "Lord", "Savior", "Holy", "Spirit",
      "Father", "Son", "Almighty", "Creator", "Redeemer", "Messiah",
      "Here", "Vader", "Seun", "Heilige", "Geest", "Verlosser", "Messias",
      "Almagtige", "Skepper", "Verlosser", "Koning", "Koningin", "Profete",
      "Apostel", "Priester", "Pastor", "Predikant", "Biskop", "Kardinaal",
      "Pous", "Pater", "Broeder", "Suster", "Non", "Monnik", "Kluisenaar"
    ],
    "CacheDurationMinutes": 10,
    "ConnectivityTestTimeoutSeconds": 10,
    "MaxSearchTermLength": 50,
    "MaxContentLength": 100,
    "SafetyMargin": 1,
    "MinResultsToShow": 1
  }
}
