@using CHAP2.WebPortal.Controllers
@model ChorusEditViewModel
@{
    ViewData["Title"] = "Edit Chorus";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Chorus - CHAP2</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="form-page">
    <!-- Animated Background -->
    <div class="animated-background">
        <div class="floating-notes">
            <div class="note note-1">♪</div>
            <div class="note note-2">♫</div>
            <div class="note note-3">♬</div>
            <div class="note note-4">♩</div>
            <div class="note note-5">♭</div>
            <div class="note note-6">♯</div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="form-container">
        <div class="form-header">
            <div class="header-with-nav">
                <button type="button" class="nav-arrow nav-prev" id="prevChorusBtn" title="Previous Chorus" style="display: none;">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <div class="header-content">
                    <h1><i class="fas fa-edit"></i> Edit Chorus</h1>
                    <p>Update the chorus information</p>
                    <div class="chorus-position" id="chorusPosition" style="display: none;"></div>
                </div>
                <button type="button" class="nav-arrow nav-next" id="nextChorusBtn" title="Next Chorus" style="display: none;">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>



        <form asp-action="Edit" method="post" class="chorus-form">
            <input asp-for="Id" type="hidden" />
            
            <div class="form-section">
                <h2><i class="fas fa-info-circle"></i> Basic Information</h2>
                
                <div class="form-group">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-music"></i> Chorus Name *
                    </label>
                    <input asp-for="Name" name="Name" class="form-input" placeholder="Enter chorus name..." 
                           value="@Model.Name" required minlength="2" maxlength="200" />
                    <span asp-validation-for="Name" class="validation-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Key" class="form-label">
                            <i class="fas fa-key"></i> Musical Key *
                        </label>
                        <select asp-for="Key" name="Key" class="form-select" required>
                            <option value="">Select a key...</option>
                            @foreach (var key in ViewBag.MusicalKeys)
                            {
                                <option value="@key" selected="@(Model.Key == key)">@key</option>
                            }
                        </select>
                        <span asp-validation-for="Key" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Type" class="form-label">
                            <i class="fas fa-layer-group"></i> Chorus Type *
                        </label>
                        <select asp-for="Type" name="Type" class="form-select" required>
                            <option value="">Select a type...</option>
                            @foreach (var type in ViewBag.ChorusTypes)
                            {
                                <option value="@type" selected="@(Model.Type == type)">@type</option>
                            }
                        </select>
                        <span asp-validation-for="Type" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TimeSignature" class="form-label">
                            <i class="fas fa-clock"></i> Time Signature *
                        </label>
                        <select asp-for="TimeSignature" name="TimeSignature" class="form-select" required>
                            <option value="">Select time signature...</option>
                            @foreach (var ts in ViewBag.TimeSignatures)
                            {
                                <option value="@ts" selected="@(Model.TimeSignature == ts)">@ts</option>
                            }
                        </select>
                        <span asp-validation-for="TimeSignature" class="validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h2><i class="fas fa-align-left"></i> Lyrics</h2>

                <div class="form-group">
                    <label asp-for="ChorusText" class="form-label">
                        <i class="fas fa-music"></i> Chorus Text *
                    </label>
                    <div style="margin-bottom: 10px;">
                        <button type="button" class="btn-insert-pagebreak" onclick="insertPageBreak()">
                            <i class="fas fa-file-alt"></i> Insert Page Break
                        </button>
                    </div>
                    <textarea asp-for="ChorusText" name="ChorusText" id="chorusTextArea" class="form-textarea" rows="12"
                              placeholder="Enter the chorus lyrics here...&#10;&#10;Example:&#10;Amazing grace, how sweet the sound&#10;That saved a wretch like me&#10;I once was lost, but now I'm found&#10;Was blind, but now I see&#10;&#10;Use the 'Insert Page Break' button to force a new page in the display."
                              required minlength="10">@Model.ChorusText</textarea>
                    <span asp-validation-for="ChorusText" class="validation-error"></span>
                    <div class="form-help">
                        <i class="fas fa-info-circle"></i>
                        Enter each line on a new line. Empty lines will be preserved for spacing. Use <strong>[PAGE]</strong> to force a new page.
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn-secondary" onclick="closeWindow()">
                    <i class="fas fa-times"></i> Close Window
                </button>
                <a href="@Url.Action("Detail", new { id = Model.Id })" class="btn-secondary" target="_blank">
                    <i class="fas fa-eye"></i> View
                </a>
                <button type="button" class="btn-primary" onclick="showSaveConfirmation()">
                    <i class="fas fa-save"></i> Update Chorus
                </button>
            </div>
        </form>
    </div>

    <!-- Save Confirmation Modal -->
    <div id="saveConfirmationModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-question-circle"></i> Confirm Save</h3>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to save the changes to this chorus?</p>
                <p><strong>Chorus Name:</strong> <span id="confirmChorusName"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="hideSaveConfirmation()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn-primary" onclick="confirmSave()">
                    <i class="fas fa-check"></i> Yes, Save Changes
                </button>
            </div>
        </div>
    </div>

    <script src="~/js/form.js" asp-append-version="true"></script>
    <script>
        // Chorus Navigation for Edit Page
        (function() {
            let chorusList = [];
            let currentIndex = -1;
            const currentChorusId = '@Model.Id';

            // Initialize navigation on page load
            document.addEventListener('DOMContentLoaded', function() {
                loadChorusListFromSession();
                setupNavigationButtons();
            });

            function loadChorusListFromSession() {
                const storedList = sessionStorage.getItem('chorusList');
                if (storedList) {
                    try {
                        chorusList = JSON.parse(storedList);
                        currentIndex = chorusList.findIndex(c => c.id === currentChorusId);

                        if (chorusList.length > 1 && currentIndex !== -1) {
                            showNavigationButtons();
                            updatePositionIndicator();
                        }
                    } catch (e) {
                        console.error('Error parsing chorus list:', e);
                    }
                }
            }

            function showNavigationButtons() {
                const prevBtn = document.getElementById('prevChorusBtn');
                const nextBtn = document.getElementById('nextChorusBtn');
                const positionEl = document.getElementById('chorusPosition');

                if (prevBtn) prevBtn.style.display = 'flex';
                if (nextBtn) nextBtn.style.display = 'flex';
                if (positionEl) positionEl.style.display = 'block';

                // Update button states
                updateButtonStates();
            }

            function updateButtonStates() {
                const prevBtn = document.getElementById('prevChorusBtn');
                const nextBtn = document.getElementById('nextChorusBtn');
                const isMassEdit = sessionStorage.getItem('massEditMode') === 'true';
                const isLastChorus = currentIndex >= chorusList.length - 1;

                if (prevBtn) {
                    prevBtn.disabled = currentIndex <= 0;
                    prevBtn.style.opacity = currentIndex <= 0 ? '0.5' : '1';
                }
                if (nextBtn) {
                    // In mass edit mode, show "Finish" on last chorus
                    if (isMassEdit && isLastChorus) {
                        nextBtn.innerHTML = '<i class="fas fa-check"></i>';
                        nextBtn.title = 'Finish Mass Edit';
                        nextBtn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                    } else {
                        nextBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
                        nextBtn.title = 'Next Chorus';
                        nextBtn.style.background = '';
                    }
                    nextBtn.disabled = false;
                    nextBtn.style.opacity = '1';
                }
            }

            function updatePositionIndicator() {
                const positionEl = document.getElementById('chorusPosition');
                if (positionEl && chorusList.length > 1) {
                    positionEl.textContent = `Chorus ${currentIndex + 1} of ${chorusList.length}`;
                }
            }

            function setupNavigationButtons() {
                const prevBtn = document.getElementById('prevChorusBtn');
                const nextBtn = document.getElementById('nextChorusBtn');

                if (prevBtn) {
                    prevBtn.addEventListener('click', function() {
                        navigateChorus(-1);
                    });
                }

                if (nextBtn) {
                    nextBtn.addEventListener('click', function() {
                        navigateChorus(1);
                    });
                }

                // Add keyboard shortcuts
                document.addEventListener('keydown', function(e) {
                    // Don't navigate if user is typing in an input
                    if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA' || e.target.tagName === 'SELECT') {
                        return;
                    }

                    if (e.key === 'ArrowLeft' && (e.ctrlKey || e.metaKey)) {
                        e.preventDefault();
                        navigateChorus(-1);
                    } else if (e.key === 'ArrowRight' && (e.ctrlKey || e.metaKey)) {
                        e.preventDefault();
                        navigateChorus(1);
                    }
                });
            }

            async function navigateChorus(direction) {
                const newIndex = currentIndex + direction;
                const isMassEdit = sessionStorage.getItem('massEditMode') === 'true';

                // Don't go before first chorus
                if (newIndex < 0) {
                    return;
                }

                // Save current chorus data first
                const saved = await saveCurrentChorus();
                if (!saved) {
                    const confirmNav = confirm('Failed to save current chorus. Navigate anyway?');
                    if (!confirmNav) return;
                }

                // Check if we're at the last chorus and trying to go next
                if (newIndex >= chorusList.length) {
                    if (isMassEdit) {
                        // Finish mass edit mode
                        sessionStorage.removeItem('massEditMode');
                        sessionStorage.removeItem('chorusList');
                        sessionStorage.removeItem('currentChorusId');
                        alert(`Mass Edit Complete!\n\nYou have successfully edited all ${chorusList.length} choruses.`);
                        window.close();
                    }
                    return;
                }

                // Navigate to new chorus
                const newChorus = chorusList[newIndex];
                sessionStorage.setItem('currentChorusId', newChorus.id);
                window.location.href = `/Home/Edit/${newChorus.id}`;
            }

            async function saveCurrentChorus() {
                try {
                    const form = document.querySelector('.chorus-form');
                    const formData = {
                        id: document.querySelector('input[name="Id"]').value,
                        name: document.querySelector('input[name="Name"]').value,
                        chorusText: document.querySelector('textarea[name="ChorusText"]').value,
                        key: parseInt(document.querySelector('select[name="Key"]').value),
                        type: parseInt(document.querySelector('select[name="Type"]').value),
                        timeSignature: parseInt(document.querySelector('select[name="TimeSignature"]').value)
                    };

                    const response = await fetch('/Home/SaveChorusJson', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();
                    return result.success;
                } catch (error) {
                    console.error('Error saving chorus:', error);
                    return false;
                }
            }

            // Expose for external use if needed
            window.chorusEditNav = {
                navigateChorus,
                saveCurrentChorus,
                getChorusList: () => chorusList,
                getCurrentIndex: () => currentIndex
            };
        })();
    </script>
</body>
</html> 