<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CHAP2 Web Portal</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ai-search.css?v=@DateTime.Now.Ticks" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="app-container">
        @RenderBody()
    </div>

    <script src="~/js/utils.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    <script src="~/js/site.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    <script src="~/js/search.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    <script src="~/js/detail.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    <script src="~/js/system-restart.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 